<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinh"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/seekBar1"
        android:text="00:00"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="15dp"
        android:text="00:00"
        android:textColor="#fff"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView4" />

    <ImageButton
        android:id="@+id/imgnext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgplay"
        android:src="@drawable/next1" />

    <ImageButton
        android:id="@+id/imgpre"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignTop="@+id/imgplay"
        android:src="@drawable/previous" />

    <ImageButton
        android:id="@+id/imgplay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/imgpre"
        android:src="@drawable/playbutton" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/seekBar1"
        android:layout_marginRight="28dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/textView4"
        android:src="@drawable/stop" />

    <TextView
        android:id="@+id/txttenbai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Tên bài hát:"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttenbai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/imgnext"
        android:src="@drawable/cd" />

</RelativeLayout>